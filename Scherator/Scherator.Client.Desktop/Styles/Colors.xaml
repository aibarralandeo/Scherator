<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Scherator.Client.Desktop.Styles">
    
    <Color x:Key="BackgroundLight">#FFFFFF</Color>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>

    <Color x:Key="ForegroundMain">#404040</Color>
    <SolidColorBrush x:Key="ForegroundMainBrush" Color="{StaticResource ForegroundMain}"/>

    <Color x:Key="DisabledLight">#E1E5F2</Color>
    <SolidColorBrush x:Key="DisabledLightBrush" Color="{StaticResource DisabledLight}"/>

    <Color x:Key="HoveredLight">#F5F5F5</Color>
    <SolidColorBrush x:Key="Button.MouseOver.Background" Color="{StaticResource HoveredLight}"/>

    <Color x:Key="HoveredCritical">#D33E43</Color>
    <SolidColorBrush x:Key="Button.MouseOver.Background.Critical" Color="{StaticResource HoveredCritical}"/>

    <Color x:Key="PressedLight">#F0F0F0</Color>
    <SolidColorBrush x:Key="Button.Pressed.Background" Color="{StaticResource PressedLight}"/>

</ResourceDictionary>